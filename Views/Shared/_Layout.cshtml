<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 4Ballers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Dodanie stylów do dark mode */
        body {
            background-color: #000; /* Czarne tło dla całej strony */
            color: #fff; /* Biały kolor tekstu */
        }

        .navbar {
            background-color: #000; /* Czarne tło dla navbaru */
            color: #fff; /* Biały kolor tekstu na navbarze */
        }

        .navbar-toggler-icon {
            background-color: #fff; /* Biały kolor ikony przycisku burger menu */
        }

        .footer {
            background-color: #000; /* Czarne tło dla stopki */
            color: #fff; /* Biały kolor tekstu na stopce */
            margin-top: 60px; /* Dodatkowy margines na górze */
        }

        .navbar-brand, .nav-link {
            background-color: #000;
            color: #fff !important; /* Biały kolor dla linków w navbarze */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black box-shadow mb-3">
            <div class="container-fluid">
                <!-- Dodanie znaczka piłki przed nazwą _4Ballers -->
                <div id="logo" class="d-flex align-items-center">
                    <img src="~/images/ballLogo.jpg" alt="Basketball Icon" class="logo-img" />
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">4Ballers</a>
                   <ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" asp-controller="Public" asp-action="History">Historia</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Public" asp-action="Teams">Drużyny</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Public" asp-action="Contact">Kontakt</a>
    </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Private" asp-action="Shoes">Obuwie</a>
                        </li>

    @if (User.Identity.IsAuthenticated)
    {
        
        <li class="nav-item">
            <a class="nav-link" asp-controller="Orders" asp-action="Index">Koszyk</a>
         </li>

    }
</ul>

                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
                    <partial name="_LoginPartial" />
               
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="position: fixed; bottom: 0; width: 100%;">
        <div class="container-fluid">
            <div id="logo2" class="d-flex align-items-center">
                <img src="~/images/ballLogo.jpg" alt="Basketball Icon" class="logo-img" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">4Ballers - Piotr Kubis</a>

            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
